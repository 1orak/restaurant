@model IEnumerable<RestaurantApp.Models.Foods>

@{
    ViewBag.Title = "Zaawansowane";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title</h1>
            </hgroup>
            <p>
                @Html.ActionLink("Dodaj nową pozycję menu", "Create")
            </p>
            <p>Wyszukaj</p>
    @using (Html.BeginForm())
    {   
         <p>
            nazwa: @Html.TextBox("SearchString") 
            kategoria: @Html.DropDownList("foodCategory", "All")  
            cena: @Html.DropDownList("foodPrice", "All")
            czas: @Html.DropDownList("foodTime", "All")
         <input type="submit" value="filtruj" /></p>
    }



        </div>
    </section>
}




<table frame=box>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.time_to_prepare)
        </th>
           <th>
            functions
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.category)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.time_to_prepare)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>

